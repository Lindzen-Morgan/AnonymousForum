@page "/register"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation
@inject UserService UserService

<h3>Register</h3>

<EditForm Model="registerModel" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Username:</label>
        <InputText @bind-Value="registerModel.Username" />
    </div>
    <div>
        <label>Password:</label>
        <InputText @bind-Value="registerModel.Password" type="password" />
    </div>
    <button type="submit">Register</button>
</EditForm>

@code {
    private RegisterModel registerModel = new RegisterModel();

    private async Task HandleRegister()
    {
        var userCreated = await UserService.CreateUserAsync(registerModel.Username, registerModel.Password);
        if (userCreated)
        {
            Navigation.NavigateTo("/login");
        }
        else
        {
            // Handle registration failure (e.g., username already exists)
        }
    }

    public class RegisterModel
    {
        [Required]
        public string? Username { get; set; }
        [Required]
        public string? Password { get; set; }
    }
}
